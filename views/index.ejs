<%- include('./partials/header.ejs') %>
    <main>
        <section>
            
      

            <div class="tests content">
                <h2>Todos los Tests</h2>
                <% if (tests.length > 0) { %>
                <% tests.forEach(test => { %>
              
                <h3 class="title"><%= test.question %></h3>
                <ul>
                    <li><%= test.answer1 %></li>
                    <li><%= test.answer2 %></li>
                    <li><%= test.answer3 %></li>
                    <li><%= test.answer4 %></li>
                </ul>
                
                <% }) %>
                <% } else { %>
                <p>No hay nada que mostrar...</p>
                <% } %>
              
              </div>
              

        </section>
    </main>
<%- include('./partials/footer.ejs') %>
